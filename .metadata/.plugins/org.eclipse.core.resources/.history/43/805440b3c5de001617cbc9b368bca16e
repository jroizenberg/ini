package model;

import main.UserView;

import org.zkoss.calendar.impl.SimpleCalendarEvent;

import com.asofarma.fm.calendar.model.AppointmentType;

public class FMSimpleCalendarEvent extends SimpleCalendarEvent {

	private static final long serialVersionUID = 1959339381881516860L;

	private static final String HEADER_COLOR="#B7B2B3";
	private static final String CONTENT_COLOR="#8E8B8C";
	
	private static final String HEADER_COLOR_YELOW="#F1EA1C";

	
	private Long id;
	private String userName;
	private AppointmentType type;
	
	//VBLES PROPIAS DE EVENTO 'NO PROMOTIONAL'
	private String strCausa;
	private Long idCause;
	
	//VBLES PROPIAS DE EVENTO 'EVENTO'
	private String strTipoEvento;
	private Long idEventType;
	
	//VBLES PROPIAS DE EVENTOS 'EVENTO' Y 'CITA A CLIENTE'
	private String strCiclo;
	private String strContacto;
	
	private Long idContact;
	private Long idCycle;
	
	//VBLES PROPIAS DEL OBJETO ALARMA
	private Long idAlarm;
	
	private Boolean isTodoElDia;
	private Boolean isMail;
	private Boolean isPopup;
	
	
	private String strTiempoMail;
	private String strTiempoPopup;
	private Long idMailFrequency;
	private Long idPopupFrequency;
	private String descripcion;
	
	public void changeFMColors() {
		this.setHeaderColor(HEADER_COLOR);
		this.setContentColor(CONTENT_COLOR);
	}
	
	public void changeFMColorsAppointmentVisited() {
		this.setHeaderColor(HEADER_COLOR_YELOW);
		this.setContentColor(CONTENT_COLOR);
	}
	
	public void changeFMColors(UserView user) {
		this.setHeaderColor(user.getBorderColor());
		this.setContentColor(user.getContentColor());
	}
	
	public void changeFMColorsAppointmentVisited(UserView user) {
		this.setHeaderColor(HEADER_COLOR_YELOW);
		this.setContentColor(user.getContentColor());
	}
	
	public Long getId() {
		return id;
	}
	public void setId(Long id) {
		this.id = id;
	}
	
	public AppointmentType getType() {
		return type;
	}
	public void setType(AppointmentType type) {
		this.type = type;
	}
	public Long getIdAlarm() {
		return idAlarm;
	}
	public void setIdAlarm(Long idAlarm) {
		this.idAlarm = idAlarm;
	}
	public String getUserName() {
		return userName;
	}
	public void setUserName(String userName) {
		this.userName = userName;
	}
	public String getStrCausa() {
		return strCausa;
	}
	public void setStrCausa(String strCausa) {
		this.strCausa = strCausa;
	}
	public String getStrTipoEvento() {
		return strTipoEvento;
	}
	public void setStrTipoEvento(String strTipoEvento) {
		this.strTipoEvento = strTipoEvento;
	}
	public String getStrCiclo() {
		return strCiclo;
	}
	public void setStrCiclo(String strCiclo) {
		this.strCiclo = strCiclo;
	}
	public String getStrContacto() {
		return strContacto;
	}
	public void setStrContacto(String strContacto) {
		this.strContacto = strContacto;
	}
	public Boolean getIsTodoElDia() {
		return isTodoElDia;
	}
	public void setIsTodoElDia(Boolean isTodoElDia) {
		this.isTodoElDia = isTodoElDia;
	}
	public Boolean getIsMail() {
		return isMail;
	}
	public void setIsMail(Boolean isMail) {
		this.isMail = isMail;
	}
	public Boolean getIsPopup() {
		return isPopup;
	}
	public void setIsPopup(Boolean isPopup) {
		this.isPopup = isPopup;
	}
	public String getStrTiempoMail() {
		return strTiempoMail;
	}
	public void setStrTiempoMail(String strTiempoMail) {
		this.strTiempoMail = strTiempoMail;
	}
	public String getStrTiempoPopup() {
		return strTiempoPopup;
	}
	public void setStrTiempoPopup(String strTiempoPopup) {
		this.strTiempoPopup = strTiempoPopup;
	}
	public Long getIdCause() {
		return idCause;
	}
	public void setIdCause(Long idCause) {
		this.idCause = idCause;
	}
	
	public Long getIdContact() {
		return idContact;
	}

	public void setIdContact(Long idContact) {
		this.idContact = idContact;
	}
	
	public Long getIdEventType() {
		return idEventType;
	}

	public void setIdEventType(Long idEventType) {
		this.idEventType = idEventType;
	}

	public Long getIdCycle() {
		return idCycle;
	}

	public void setIdCycle(Long idCycle) {
		this.idCycle = idCycle;
	}

	public Long getIdMailFrequency() {
		return idMailFrequency;
	}
	public void setIdMailFrequency(Long idMailFrequency) {
		this.idMailFrequency = idMailFrequency;
	}
	public Long getIdPopupFrequency() {
		return idPopupFrequency;
	}
	public void setIdPopupFrequency(Long idPopupFrequency) {
		this.idPopupFrequency = idPopupFrequency;
	}

	public String getDescripcion() {
		return descripcion;
	}

	public void setDescripcion(String descripcion) {
		this.descripcion = descripcion;
	}
	
	
}
